include ../icon/_icon

mixin intro(data)
  .gfp24_intro(class=data.modifiers)
    .gfp24_wrapper
      .gfp24_intro-content
        h2.gfp24_intro-title= data.title
        .gfp24_intro-text
          each p in data.text
            p!= p
        if data.social
          .gfp24_intro-social
            h3.gfp24_intro-social-title= data.social.title
            ul.gfp24_intro-social-items
              each s in data.social.items
                li.gfp24_intro-social-item
                  a(href=s.href target="_blank")
                    +icon({icon: s.icon})
                    .hidden-accessibly= s.name
